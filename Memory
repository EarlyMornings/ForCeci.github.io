            justify-content: center;
        }

        .memory-card .inner .cover {
            display: block;
        }

        .memory-card.flip .inner .cover {
            display: none;
        }

        .memory-card .inner .back {
            display: none;
        }

        .memory-card.flip .inner .back {
            display: block;
        }

        #game-board {
            display: flex;
            flex-wrap: wrap;
